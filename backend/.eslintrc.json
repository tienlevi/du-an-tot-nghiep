{
    "root": true,
    "parser": "babel-eslint", // Use this parser for JavaScript
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "eslint-config-prettier", "prettier"],
    "rules": {
        "no-unused-vars": "off",
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "always",
                "semi": true,
                "trailingComma": "all",
                "tabWidth": 4,
                "endOfLine": "auto",
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 120
            }
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}
